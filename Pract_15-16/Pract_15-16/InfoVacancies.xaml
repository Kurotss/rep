<Window x:Class="Pract_15_16.InfoVacancies"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract_15_16"
        mc:Ignorable="d"
        Title="InfoVacancies" Height="400" Width="610" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <DataGrid Name="info" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name_of_department}" Header="Отдел"/>
                <DataGridTextColumn Binding="{Binding Name_of_post}" Header="Должность"/>
                <DataGridTextColumn Binding="{Binding Free_vacancies}" Header="Кол-во вакансий"/>
                <DataGridTextColumn Binding="{Binding Salary}" Header="Оклад"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
